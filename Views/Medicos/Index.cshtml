@model IEnumerable<AgendaMedica.Models.Medico>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5 text-dark ">Cadastro de <span class="fw-bold">Médicos</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i> Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.CRM)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Especialidade)
				</th>
				<th class="bg-black"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CRM)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Especialidade.Nome)
					</td>
					<td>
						<a class="btn btn-outline-light btn-sm" asp-action="Edit" asp-route-id="@item.MedicoId"><i class="bi bi-pencil-square"></i> Editar</a>
						<a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.MedicoId"><i class="bi bi-x-square"></i> Excluir</a>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>