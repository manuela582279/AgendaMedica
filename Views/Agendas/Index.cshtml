@model IEnumerable<AgendaMedica.Models.Agenda>

@{
	ViewData["Title"] = "Agendar";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5 text-dark  ">Cadastro de <span class="fw-bold">Consultas</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i> Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Paciente)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Medico)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.DataConsulta)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th class="bg-black"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Paciente.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Medico.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataConsulta)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Status)
					</td>
					<td>
						<a class="btn btn-outline-light btn-sm" asp-action="Edit" asp-route-id="@item.AgendaId"><i class="bi bi-pencil-square"></i> Editar</a>
						<a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.AgendaId"><i class="bi bi-x-square"></i> Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>