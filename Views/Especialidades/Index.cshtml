@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
	ViewData["Title"] = "Cadastro de Especialidade ";
}


<div class="container text-light mt-5">
	<h1 class="text-center display-5 text-dark ">Cadastro de <span class="fw-bold">Especialidades</span></h1>


	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"><i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-dark">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-dark"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-capitalize">
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						<a class="btn btn-outline-light btn-sm" asp-action="Edit" asp-route-id="@item.EspecialidadeId"><i class="bi bi-pencil-square"></i> Editar</a>
						<a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.EspecialidadeId"><i class="bi bi-x-square"></i> Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>


